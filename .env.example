# Environment
NODE_ENV=development
GO_ENV=development

# Server Configuration
PORT=8080
HOST=localhost

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/urlshortener?sslmode=disable
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=urlshortener
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1h

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# External Services
GEOLOCATION_API_KEY=your-geolocation-api-key
GEOLOCATION_API_URL=https://api.ipgeolocation.io/ipgeo

# Application Configuration
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
SHORT_CODE_LENGTH=8
DEFAULT_EXPIRY_DAYS=365

# Security
BCRYPT_COST=12
MAX_FILE_SIZE=10MB